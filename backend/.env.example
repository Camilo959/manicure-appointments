# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# URL de conexión a PostgreSQL
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/manicure_appointments_bd?schema=public"

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Entorno de ejecución
NODE_ENV="development"

# Puerto del servidor
PORT=3000

# ===========================================
# CONFIGURACIÓN DE JWT
# ===========================================

# Secreto para firmar tokens JWT (CAMBIAR EN PRODUCCIÓN)
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="tu_super_secreto_seguro_aqui_cambiar_en_produccion_minimo_32_caracteres"

# Expiración del token (ejemplos: 15m, 1h, 7d, 30d)
JWT_EXPIRES_IN="24h"

# Rondas de encriptación de bcrypt (10-12 recomendado)
BCRYPT_SALT_ROUNDS="10"

# ===========================================
# CONFIGURACIÓN DE RESEND (para futuro)
# ===========================================

# API Key de Resend para envío de emails
RESEND_API_KEY="re_tu_api_key_aqui"

# Email del remitente
RESEND_FROM_EMAIL="noreply@tudominio.com"
