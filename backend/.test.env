DATABASE_URL="postgresql://postgres:camilo@localhost:5432/test_manicure_appointments_bd"

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Entorno de ejecución
NODE_ENV="development"

# Puerto del servidor
PORT=3000

# ===========================================
# CONFIGURACIÓN DE JWT
# ===========================================

# Secreto para firmar tokens JWT (CAMBIAR EN PRODUCCIÓN)
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="tu_super_secreto_seguro_aqui_cambiar_en_produccion_minimo_32_caracteres"

# Expiración del token (ejemplos: 15m, 1h, 7d, 30d)
JWT_EXPIRES_IN="24h"

# Rondas de encriptación de bcrypt (10-12 recomendado)
BCRYPT_SALT_ROUNDS="10"

# ===========================================
# CONFIGURACIÓN DE RESEND
# ===========================================

# API Key de Resend para envío de emails transaccionales
# Obtener en: https://resend.com/api-keys
# Plan gratuito: 3000 emails/mes
# IMPORTANTE: SIN esta key, el sistema funciona pero no envía emails
RESEND_API_KEY="re_tu_api_key_aqui"

# Email del remitente (debe ser de un dominio verificado en producción)
# En desarrollo puedes dejar vacío para usar: onboarding@resend.dev
# En producción: Verificar dominio en https://resend.com/domains
RESEND_FROM_EMAIL="Manicure Spa <noreply@tudominio.com>"

# URL del frontend (para generar links de cancelación)
FRONTEND_URL="http://localhost:3001"
